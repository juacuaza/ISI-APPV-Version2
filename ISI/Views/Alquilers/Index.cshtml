@model IEnumerable<ISI.Models.Alquiler>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alquileres</h2>

<p>
    @Html.ActionLink("Nuevo Alquiler", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickUpate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfReturn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfReturn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AlquilerID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.AlquilerID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.AlquilerID })
        </td>
    </tr>
}

</table>
